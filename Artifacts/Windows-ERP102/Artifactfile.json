{
  "$schema": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/schemas/2016-11-28/dtlArtifacts.json",
  "title": "Deploys ERP 10.2",
  "description": "Deploys ERP 10.2 Base or Latest GA Appserver",
  "publisher": "QA Tools",
  "tags": [
    "Windows",
    "ERP"
  ],
  "iconUri": "https://raw.githubusercontent.com/arturlyd/MyAzureArtifacts/master/Artifacts/Windows-ERP102/ERP.ico",
  "targetOsType": "Windows",
  "parameters": {
    "erpversion": {
      "type": "string",
      "displayName": "ERP Version",
      "description": "ERP Version to install: Base / Latest GA",
      "defaultValue": "10.2.200 Latest GA",
      "allowedValues": [
        "10.2.100 Base", "10.2.100 Latest GA","10.2.200 Base","10.2.200 Latest GA"
      ]
    }
  },
  "runCommand": {
    "commandToExecute": "[concat('powershell.exe -ExecutionPolicy Bypass -File ERP102.ps1', parameters('erpversion'))]"
  }
}