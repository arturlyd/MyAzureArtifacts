{
  "$schema": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/schemas/2016-11-28/dtlArtifacts.json",
  "title": ".NET 4.7.x Installer",
  "description": "NET 4.7.x Installer",
  "publisher": "QA Tools",
  "tags": [
    "Windows",
    "ERP"
  ],
  "iconUri": "https://raw.githubusercontent.com/arturlyd/MyAzureArtifacts/master/Artifacts/Windows-NET47x/ERP.ico",
  "targetOsType": "Windows",
  "parameters": {
    "netversion": {
      "type": "string",
      "displayName": ".Net Version",
      "description": "The .NET version to install (4.7.1 / 4.7.2)",
      "defaultValue": "4.7.2",
      "allowedValues": [
        "4.7.1", "4.7.2"
      ]
    }
  },
  "runCommand": {
    "commandToExecute": "[concat('powershell.exe -ExecutionPolicy Bypass -File NET47x.ps1 ', parameters('netversion'))]"
  }
}