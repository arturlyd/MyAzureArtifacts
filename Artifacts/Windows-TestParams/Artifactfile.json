{
  "$schema": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/schemas/2016-11-28/dtlArtifacts.json",
  "title": "SQL 2016/2017 Installer ",
  "description": "Downloads, installs and configures ERP SQL Server 2017/2016, SSRS and SSMS to VM",
  "publisher": "QA Tools",
  "tags": [
    "Windows",
    "ERP"
  ],
  "iconUri": "https://raw.githubusercontent.com/arturlyd/MyAzureArtifacts/master/Artifacts/Windows-TestParams/ERP.ico",
  "targetOsType": "Windows",
  "parameters": {
    "onetwo": {
      "type": "string",
      "displayName": "SQL Server Version",
      "description": "Sql server Version to install: 2016 / 2017",
      "defaultValue": "sql2017",
      "allowedValues": [
        "sql2016", "sql2017"
      ]
    },
    "checkbx": {
      "type": "bool",
      "displayName": "SQL Server Version",
      "description": "Sql server Version to install: 2016 / 2017",
      "defaultValue": true,
      "allowedValues": [
        true, false
      ]
    }
  },
  "runCommand": {
    "commandToExecute": "[concat('powershell.exe -ExecutionPolicy Bypass -File Testparams.ps1 ', parameters('onetwo'), ' $', parameters('checkbx'))]"
  }
}